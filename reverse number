#include <iostream>
using namespace std;
int reverse(int num,int rev){
    if(num==0)
    return rev;
    else{
    rev= rev*10 + num%10;
    return reverse(num/10,rev);
    }
}
int main() {
    int n;
    int rev=0;
    cout<<"Enter number: ";
    cin>>n;
    cout<<"Reverse number is:"<<reverse(n,rev);
    return 0;
}
